<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/beige">

    <TextView
        android:id="@+id/text"
        android:layout_width="500dp"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/marron_clair"
        android:text="Ma liste j'aime :"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/marron_clair"
        android:textSize="35dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/deconnexion"
        android:layout_marginLeft="20dp"/>

    <ListView
        android:id="@+id/listview_recettes"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/text"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/liste_layout" />

    <View
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/listview_recettes"
        android:layout_marginTop="1dp"
        android:background="@color/marron_clair" />

    <TextView
        android:id="@+id/ajout_recettes"
        android:layout_width="wrap_content"
        android:layout_height="1000dp"
        android:layout_below="@+id/listview_recettes"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-12dp"
        android:text="+"
        android:textColor="@color/beige"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/deconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview_recettes"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="0dp"
        android:text="X"
        android:textColor="@color/beige"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview_recettes"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="8dp"
        android:text="♥"
        android:textColor="@color/beige"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview_recettes"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-18dp"
        android:text="↑"
        android:textColor="@color/beige"
        android:textSize="50dp" />

</RelativeLayout>